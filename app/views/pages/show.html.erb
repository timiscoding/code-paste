
<select id="expiry"></select>
<span id="expiry-status"></span>
<button class="add-code">Add code element</button>

<script type="text/template" id="codeTemplate">
  <div class="code" data-element-id="{{ element_id }}">
    <div class="controls">
      <button class="font-size">+</button>
      <button class="font-size">-</button>
      <label for="theme">Theme</label>
      <select id="theme">
        <option value="default">Default</option>
        <option value="blackboard">Blackboard</option>
      </select>
      <label for="language">Language</label>
      <select id="language">
        <option value="javascript">Javascript</option>
        <option value="ruby">Ruby</option>
        <option value="css">CSS</option>
        <option value="htmlmixed">HTML</option>
      </select>
      <button class="save">Save</button>
      <span class="status"></span>
      <button class="delete">Delete</button>
    </div>
  </div>
</script>

<script type="text/template" id="widgetTemplate">
  <div data-row="1" data-col="1" data-sizex="1" data-sizey="1">0</div>
</script>

